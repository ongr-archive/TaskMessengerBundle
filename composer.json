{
    "name": "ongr/task-messenger-bundle",
    "description": "Handles ONGR sync tasks schedule",
    "type": "symfony-bundle",
    "homepage": "http://ongr.io",
    "license": "MIT",
    "authors": [
        {
            "name": "ONGR team",
            "homepage": "http://www.ongr.io"
        }
    ],
    "require": {
        "php": ">=5.4",
        "symfony/symfony": "~2.6",
        "symfony/proxy-manager-bridge": "~2.3"
    },
    "suggest": {
        "videlalvaro/php-amqplib": "For publishing messages to AMQP server.",
        "pda/pheanstalk": "For publishing messages to beanstalkd server.",
        "predis/predis": "For publishing messages to redis server."
    },
    "require-dev": {
        "mikey179/vfsStream": "~1.4",
        "phpunit/phpunit": "~4.1",
        "squizlabs/php_codesniffer": "~2.0",
        "ongr/connections-bundle": "~0.4",
        "videlalvaro/php-amqplib": "2.*",
        "pda/pheanstalk": "v3.0.2",
        "predis/predis": "~1.0",
        "ongr/ongr-strict-standard": "~2.1"
    },
    "autoload": {
        "psr-4": { "ONGR\\TaskMessengerBundle\\": "" }
    }
}
